# ================================
# Devometric - Environment Variables
# ================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# ================================
# Rails
# ================================
RAILS_ENV=development
SECRET_KEY_BASE=generate-with-rails-secret

# ================================
# Database
# ================================
# PostgreSQL (for production)
# DATABASE_URL=postgres://user:password@localhost:5432/devometric_development
POSTGRES_USER=devometric
POSTGRES_PASSWORD=password
POSTGRES_DB=devometric_development
DB_HOST=localhost

# ================================
# Redis (for caching & jobs)
# ================================
REDIS_URL=redis://localhost:6379/0

# ================================
# LLM Provider
# ================================
# Choose one: ollama, openai, anthropic
LLM_PROVIDER=ollama

# Ollama (local, recommended for development)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2

# OpenAI (optional)
# OPENAI_API_KEY=sk-...
# OPENAI_MODEL=gpt-4o

# Anthropic (optional)
# ANTHROPIC_API_KEY=sk-ant-...
# ANTHROPIC_MODEL=claude-sonnet-4-20250514

# ================================
# Email (optional)
# ================================
# SMTP_ADDRESS=smtp.example.com
# SMTP_PORT=587
# SMTP_USERNAME=
# SMTP_PASSWORD=
# SMTP_DOMAIN=example.com
# MAIL_FROM=noreply@example.com

# ================================
# Stripe (optional, for payments)
# ================================
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...
# STRIPE_PRICE_ID=price_...

# ================================
# Application
# ================================
APP_HOST=localhost:3000
# RAILS_SERVE_STATIC_FILES=true
# RAILS_LOG_TO_STDOUT=true

# ================================
# Security
# ================================
# For production, set these:
# FORCE_SSL=true
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
