# ================================
# Devometric - .gitignore
# ================================

# ================================
# Environment & Secrets
# ================================
.env
.env.*
!.env.example
.envrc

# Rails credentials & secrets
# master.key is the decryption key - NEVER commit
config/master.key
config/credentials/*.key

# credentials.yml.enc is safe to commit (it's encrypted)
# config/credentials.yml.enc  # OK to commit

# SSL/TLS certificates
*.pem
*.crt
# Note: *.key would match master.key, handled above

# API keys file
.api_keys
secrets.yml
secrets.yml.enc

# ================================
# Rails
# ================================
# Ignore bundler config
/.bundle

# Ignore all logfiles and tempfiles
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep

# Ignore storage (Active Storage, Action Mailbox, etc.)
/storage/*
!/storage/.keep

# Ignore uploaded files in development
/public/uploads

# Ignore precompiled assets
/public/assets
/public/packs
/public/packs-test
.sass-cache/

# Ignore master key for decrypting credentials and more
/config/master.key

# Ignore deploy config (contains server IPs, keys)
/config/deploy.yml

# ================================
# Database
# ================================
# SQLite databases
*.sqlite3
*.sqlite3-*

# Database dumps
*.sql
*.dump
*.sql.gz
db/*.sqlite3
db/*.sql

# ================================
# Testing
# ================================
/coverage/
/spec/reports/
/spec/examples.txt
/test/tmp/
/test/version_tmp/

# SimpleCov
coverage/

# ================================
# Ruby
# ================================
*.gem
*.rbc
/.config
/InstalledFiles
/pkg/
.byebug_history
.dat*
.repl_history

