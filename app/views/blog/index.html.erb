<% content_for :title, "AI & Software Development Blog | Devometric" %>
<% content_for :meta_description, "Expert insights on AI skills, team productivity, and software development best practices. Learn how to make your engineering team AI-native." %>
<% content_for :og_title, "AI & Software Development Blog | Devometric" %>
<% content_for :og_description, "Expert insights on AI skills, team productivity, and software development best practices." %>
<% content_for :canonical_url, "https://devometric.com/blog" %>

<% content_for :head do %>
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Blog",
  "name": "Devometric Blog",
  "description": "Expert insights on AI skills, team productivity, and software development best practices",
  "url": "https://devometric.com/blog",
  "publisher": {
    "@type": "Organization",
    "name": "Devometric",
    "logo": {
      "@type": "ImageObject",
      "url": "https://devometric.com/logo.png"
    }
  },
  "author": {
    "@type": "Person",
    "name": "<%= @author[:name] %>",
    "jobTitle": "<%= @author[:role] %>",
    "email": "<%= @author[:email] %>",
    "url": "<%= @author[:linkedin] %>"
  }
}
</script>
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "ItemList",
  "itemListElement": [
    <% @articles.each_with_index do |article, index| %>
    {
      "@type": "ListItem",
      "position": <%= index + 1 %>,
      "url": "https://devometric.com/blog/<%= article[:slug] %>"
    }<%= index < @articles.length - 1 ? ',' : '' %>
    <% end %>
  ]
}
</script>
<% end %>

<div class="min-h-screen text-white">
  <%= render 'shared/header' %>

  <div class="bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-16 pb-12">
      <div class="text-center max-w-3xl mx-auto">
        <span class="px-3 py-1 bg-emerald-500/10 text-emerald-400 text-sm font-medium rounded-full">Blog</span>
        <h1 class="text-4xl sm:text-5xl font-bold tracking-tight mt-6">
          <span class="block text-white">AI Skills &</span>
          <span class="block text-emerald-400">Software Development</span>
        </h1>
        <p class="mt-6 text-lg text-gray-400 max-w-2xl mx-auto">
          Expert insights on building AI-native engineering teams. Practical guides, research reports, and strategies for the future of software development.
        </p>
      </div>
    </div>
  </div>

  <div class="bg-gray-800 border-y border-gray-700">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex items-center justify-center gap-4">
        <div class="w-12 h-12 bg-emerald-500/20 rounded-full flex items-center justify-center">
          <svg class="w-6 h-6 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <div>
          <p class="font-medium text-white"><%= @author[:name] %></p>
          <p class="text-sm text-gray-400"><%= @author[:role] %> at Devometric</p>
        </div>
        <a href="<%= @author[:linkedin] %>" target="_blank" rel="noopener" class="ml-4 text-gray-400 hover:text-emerald-400 transition-colors">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>

  <div class="bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @articles.each do |article| %>
        <article class="bg-gray-800/50 border border-gray-700 rounded-xl overflow-hidden hover:border-emerald-500/50 transition-colors group">
          <%= link_to blog_article_path(slug: article[:slug]), class: "block" do %>
            <div class="p-6 pb-0">
              <div class="flex items-center justify-between text-sm">
                <span class="px-2 py-1 bg-emerald-500/10 text-emerald-400 rounded-md text-xs font-medium"><%= article[:category] %></span>
                <span class="text-gray-500 flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <%= article[:reading_time] %> min read
                </span>
              </div>
            </div>

            <div class="p-6">
              <h2 class="text-xl font-semibold text-white group-hover:text-emerald-400 transition-colors mb-3">
                <%= article[:title] %>
              </h2>
              <p class="text-gray-400 text-sm leading-relaxed">
                <%= article[:excerpt] %>
              </p>
            </div>

            <div class="px-6 pb-6">
              <div class="flex items-center justify-between pt-4 border-t border-gray-700">
                <span class="text-sm text-gray-500"><%= article[:published_at].strftime("%B %d, %Y") %></span>
                <span class="text-emerald-400 text-sm font-medium flex items-center gap-1 group-hover:gap-2 transition-all">
                  Read article
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </span>
              </div>
            </div>
          <% end %>
        </article>
        <% end %>
      </div>
    </div>
  </div>

  <div class="bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-2xl md:text-3xl font-bold mb-4 text-white">Ready to assess your team's AI skills?</h2>
        <p class="text-gray-400 mb-8">
          Try our interactive demo and see how Devometric can help your team become AI-native.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <%= link_to demo_path, class: "inline-flex items-center justify-center gap-2 px-8 py-4 text-lg font-semibold rounded-lg border border-emerald-500/50 text-emerald-400 hover:bg-emerald-500/10 transition-colors" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Try the Demo
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <%= render 'shared/footer' %>
</div>
