<% content_for :title, "#{@article[:title]} | Devometric Blog" %>
<% content_for :meta_description, @article[:excerpt] %>
<% content_for :og_title, @article[:title] %>
<% content_for :og_description, @article[:excerpt] %>
<% content_for :og_type, "article" %>
<% content_for :canonical_url, "https://devometric.com/blog/#{@article[:slug]}" %>

<% content_for :head do %>
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": "<%= @article[:title] %>",
  "description": "<%= @article[:excerpt] %>",
  "author": {
    "@type": "Person",
    "name": "<%= @author[:name] %>",
    "jobTitle": "<%= @author[:role] %>",
    "email": "<%= @author[:email] %>",
    "url": "<%= @author[:linkedin] %>"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Devometric",
    "logo": {
      "@type": "ImageObject",
      "url": "https://devometric.com/logo.png"
    }
  },
  "datePublished": "<%= @article[:published_at].iso8601 %>",
  "dateModified": "<%= @article[:published_at].iso8601 %>",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "https://devometric.com/blog/<%= @article[:slug] %>"
  },
  "url": "https://devometric.com/blog/<%= @article[:slug] %>",
  "articleSection": "<%= @article[:category] %>",
  "wordCount": "<%= @article[:reading_time] * 200 %>"
}
</script>
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://devometric.com"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Blog",
      "item": "https://devometric.com/blog"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "<%= @article[:title] %>",
      "item": "https://devometric.com/blog/<%= @article[:slug] %>"
    }
  ]
}
</script>
<% end %>

<div class="min-h-screen text-white">
  <%= render 'shared/header' %>

  <div class="bg-gray-900 border-b border-gray-800">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <nav class="flex items-center gap-2 text-sm text-gray-400">
        <%= link_to root_path, class: "hover:text-white transition-colors" do %>Home<% end %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <%= link_to "Blog", blog_path, class: "hover:text-white transition-colors" %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <span class="text-gray-500 truncate max-w-xs"><%= @article[:title] %></span>
      </nav>
    </div>
  </div>

  <div class="bg-gray-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 pt-12 pb-8">
      <div class="flex items-center gap-4 mb-6">
        <span class="px-3 py-1 bg-emerald-500/10 text-emerald-400 text-sm font-medium rounded-full"><%= @article[:category] %></span>
        <span class="text-gray-500 flex items-center gap-1 text-sm">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <%= @article[:reading_time] %> min read
        </span>
      </div>

      <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white leading-tight mb-6">
        <%= @article[:title] %>
      </h1>

      <p class="text-xl text-gray-400 leading-relaxed mb-8">
        <%= @article[:excerpt] %>
      </p>

      <!-- Author Info -->
      <div class="flex items-center gap-4 pb-8 border-b border-gray-800">
        <div class="w-12 h-12 bg-emerald-500/20 rounded-full flex items-center justify-center">
          <svg class="w-6 h-6 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <div>
          <p class="font-medium text-white"><%= @author[:name] %></p>
          <p class="text-sm text-gray-400"><%= @author[:role] %></p>
        </div>
        <div class="ml-auto text-sm text-gray-500">
          <%= @article[:published_at].strftime("%B %d, %Y") %>
        </div>
      </div>
    </div>
  </div>

  <!-- Article Content -->
  <article class="bg-gray-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="prose prose-invert prose-lg max-w-none prose-headings:text-white prose-p:text-gray-300 prose-a:text-emerald-400 prose-strong:text-white prose-ul:text-gray-300 prose-ol:text-gray-300 prose-li:text-gray-300">
        <%= render "blog/articles/#{@article[:slug].underscore.gsub('-', '_')}" %>
      </div>
    </div>
  </article>

  <!-- Author Bio -->
  <div class="bg-gray-800 border-y border-gray-700">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="flex flex-col md:flex-row items-start gap-6">
        <div class="w-20 h-20 bg-emerald-500/20 rounded-full flex items-center justify-center flex-shrink-0">
          <svg class="w-10 h-10 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <div class="flex-1">
          <h3 class="text-xl font-semibold text-white mb-2">About the Author</h3>
          <p class="text-lg font-medium text-emerald-400 mb-2"><%= @author[:name] %></p>
          <p class="text-gray-400 mb-4">
            <%= @author[:role] %> at Devometric. Building tools to help engineering teams become AI-native.
            Passionate about the intersection of AI and software development productivity.
          </p>
          <div class="flex items-center gap-4">
            <a href="<%= @author[:linkedin] %>" target="_blank" rel="noopener" class="inline-flex items-center gap-2 text-sm text-gray-400 hover:text-emerald-400 transition-colors">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
              Connect on LinkedIn
            </a>
            <a href="mailto:<%= @author[:email] %>" class="inline-flex items-center gap-2 text-sm text-gray-400 hover:text-emerald-400 transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <%= @author[:email] %>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Related Articles / CTA -->
  <div class="bg-gray-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center">
        <h2 class="text-2xl font-bold text-white mb-4">Continue Reading</h2>
        <p class="text-gray-400 mb-8">Explore more articles on AI skills and software development.</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <%= link_to blog_path, class: "inline-flex items-center justify-center gap-2 px-6 py-3 font-semibold rounded-lg border border-gray-700 text-gray-300 hover:border-emerald-500/50 hover:text-emerald-400 transition-colors" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            All Articles
          <% end %>
          <%= link_to demo_path, class: "inline-flex items-center justify-center gap-2 px-6 py-3 font-semibold rounded-lg bg-emerald-500 text-gray-900 hover:bg-emerald-400 transition-colors" do %>
            Try the Demo
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <%= render 'shared/footer' %>
</div>
