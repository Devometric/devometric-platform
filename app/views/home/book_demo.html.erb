<% content_for :title, t('book_demo.meta_title') %>
<% content_for :meta_description, t('book_demo.meta_description') %>

<div class="min-h-screen text-white">
  <%= render 'shared/header' %>

  <!-- Header -->
  <div class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-gray-900 to-emerald-900/20"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-12 pb-12">
      <!-- Logo -->
      <div class="flex justify-center mb-8">
        <a href="<%= root_path %>">
          <img src="/logo.png" alt="Devometric" class="h-12 sm:h-16 w-auto">
        </a>
      </div>

      <div class="text-center max-w-3xl mx-auto">
        <div class="inline-flex items-center px-4 py-2 rounded-full bg-emerald-500/10 text-emerald-400 text-sm font-medium mb-6">
          <%= t('book_demo.badge') %>
        </div>
        <h1 class="text-4xl sm:text-5xl font-bold tracking-tight">
          <%= t('book_demo.title') %>
        </h1>
        <p class="mt-6 text-lg text-gray-400 max-w-2xl mx-auto">
          <%= t('book_demo.subtitle') %>
        </p>
      </div>
    </div>
  </div>

  <!-- Contact Form -->
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="bg-gray-800/50 border border-gray-700 rounded-2xl p-8">
      <form action="https://formspree.io/f/xjkvrrzg" method="POST" class="space-y-6">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-300 mb-2">
            <%= t('book_demo.form.name_label') %> *
          </label>
          <input type="text" name="name" id="name" required
                 class="w-full px-4 py-3 rounded-lg bg-gray-700 border border-gray-600 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent"
                 placeholder="<%= t('book_demo.form.name_placeholder') %>">
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-gray-300 mb-2">
            <%= t('book_demo.form.email_label') %> *
          </label>
          <input type="email" name="email" id="email" required
                 class="w-full px-4 py-3 rounded-lg bg-gray-700 border border-gray-600 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent"
                 placeholder="<%= t('book_demo.form.email_placeholder') %>">
        </div>

        <div>
          <label for="company" class="block text-sm font-medium text-gray-300 mb-2">
            <%= t('book_demo.form.company_label') %> *
          </label>
          <input type="text" name="company" id="company" required
                 class="w-full px-4 py-3 rounded-lg bg-gray-700 border border-gray-600 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent"
                 placeholder="<%= t('book_demo.form.company_placeholder') %>">
        </div>

        <div>
          <label for="team_size" class="block text-sm font-medium text-gray-300 mb-2">
            <%= t('book_demo.form.team_size_label') %>
          </label>
          <select name="team_size" id="team_size"
                  class="w-full px-4 py-3 rounded-lg bg-gray-700 border border-gray-600 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent">
            <option value=""><%= t('book_demo.form.team_size_placeholder') %></option>
            <option value="1-10">1-10</option>
            <option value="11-50">11-50</option>
            <option value="51-200">51-200</option>
            <option value="201-500">201-500</option>
            <option value="500+">500+</option>
          </select>
        </div>

        <div>
          <label for="message" class="block text-sm font-medium text-gray-300 mb-2">
            <%= t('book_demo.form.message_label') %>
          </label>
          <textarea name="message" id="message" rows="4"
                    class="w-full px-4 py-3 rounded-lg bg-gray-700 border border-gray-600 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent"
                    placeholder="<%= t('book_demo.form.message_placeholder') %>"></textarea>
        </div>

        <input type="hidden" name="_subject" value="New Demo Request from Devometric">

        <button type="submit"
                class="w-full px-8 py-4 text-lg font-semibold rounded-lg text-gray-900 bg-emerald-500 hover:bg-emerald-400 transition-colors cursor-pointer">
          <%= t('book_demo.form.submit') %>
        </button>

        <p class="text-center text-sm text-gray-500">
          <%= t('book_demo.form.privacy_note') %>
        </p>
      </form>
    </div>

    <!-- Alternative Contact -->
    <div class="mt-8 text-center">
      <p class="text-gray-400">
        <%= t('book_demo.alternative') %>
        <a href="mailto:risto@viher.it" class="text-emerald-400 hover:text-emerald-300">risto@viher.it</a>
      </p>
    </div>
  </div>

  <%= render 'shared/footer' %>
</div>
