<% content_for :title, "Widget Demo - Devometric" %>
<% content_for :meta_description, "Test the Devometric AI assistant widget" %>

<div class="min-h-screen bg-gradient-to-br from-gray-900 to-gray-800 text-white" data-controller="demo-chat" data-demo-chat-embed-key-value="<%= @demo_company.embed_key %>">

  <div class="border-b border-gray-700 bg-gray-900/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div class="w-8 h-8 bg-emerald-500/20 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <div>
            <h1 class="font-semibold">Devometric</h1>
            <span class="text-xs text-gray-400">Community Edition</span>
          </div>
        </div>
        <div class="flex items-center gap-4 text-sm">
          <a href="/" class="text-emerald-400 hover:text-emerald-300">Home</a>
          <a href="/test-widget.html" class="text-gray-400 hover:text-white">Widget Test</a>
          <a href="https://github.com/Devometric/devometric-platform" target="_blank" class="text-gray-400 hover:text-white flex items-center gap-1">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
            GitHub
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid lg:grid-cols-5 gap-8">

      <div class="lg:col-span-2 space-y-6">

        <div id="onboarding-card" class="bg-gray-800/50 border border-gray-700 rounded-xl p-6">
          <h2 class="text-lg font-semibold mb-4 flex items-center gap-2">
            <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            Test User Context
          </h2>

          <form id="onboarding-form" class="space-y-4" data-turbo="false" data-action="submit->demo-chat#submitOnboarding">
            <div>
              <label class="block text-sm font-medium text-gray-400 mb-2">Role</label>
              <select name="role" class="w-full px-3 py-2 bg-gray-900 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-emerald-500 focus:border-transparent" data-demo-chat-target="role">
                <option value="">Select role...</option>
                <option value="frontend">Frontend Developer</option>
                <option value="backend">Backend Developer</option>
                <option value="fullstack">Full Stack Developer</option>
                <option value="devops">DevOps Engineer</option>
                <option value="data">Data Engineer/Scientist</option>
                <option value="lead">Tech Lead/Manager</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-400 mb-2">Experience Level</label>
              <select name="experience" class="w-full px-3 py-2 bg-gray-900 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-emerald-500 focus:border-transparent" data-demo-chat-target="experience">
                <option value="">Select experience...</option>
                <option value="junior">Junior (0-2 years)</option>
                <option value="mid">Mid-level (2-5 years)</option>
                <option value="senior">Senior (5-10 years)</option>
                <option value="staff">Staff+ (10+ years)</option>
              </select>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-400 mb-2">AI Tool Experience</label>
              <select name="ai_experience" class="w-full px-3 py-2 bg-gray-900 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-emerald-500 focus:border-transparent" data-demo-chat-target="aiExperience">
                <option value="">Select AI experience...</option>
                <option value="none">Never used AI tools</option>
                <option value="beginner">Tried a few times</option>
                <option value="regular">Use occasionally</option>
                <option value="daily">Use daily</option>
                <option value="expert">Power user</option>
              </select>
            </div>

            <button type="submit" class="w-full px-4 py-2 bg-emerald-500 hover:bg-emerald-400 text-gray-900 font-semibold rounded-lg transition-colors">
              Start Chat
            </button>
          </form>

          <div id="onboarding-complete" class="hidden">
            <div class="flex items-center gap-2 text-emerald-400 mb-4">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="font-medium">Context set!</span>
            </div>
            <div id="user-profile" class="text-sm text-gray-400 space-y-1"></div>
          </div>
        </div>

        <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-6">
          <h2 class="text-lg font-semibold mb-4 flex items-center gap-2">
            <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            Demo Configuration
          </h2>
          <div class="space-y-3 text-sm">
            <div class="flex justify-between">
              <span class="text-gray-400">Organization</span>
              <span class="text-white"><%= @demo_company.name %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-400">Embed Key</span>
              <code class="text-emerald-400 text-xs bg-gray-900 px-2 py-1 rounded"><%= @demo_company.embed_key.first(12) %>...</code>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-400">LLM Provider</span>
              <span class="text-white"><%= ENV.fetch('LLM_PROVIDER', 'ollama') %></span>
            </div>
          </div>
          <div class="mt-4 pt-4 border-t border-gray-700 text-xs text-gray-500">
            Configure via API or edit <code class="bg-gray-900 px-1.5 py-0.5 rounded">db/seeds.rb</code>
          </div>
        </div>

        <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-6">
          <h2 class="text-lg font-semibold mb-4 flex items-center gap-2">
            <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Try asking...
          </h2>
          <div class="space-y-2">
            <button class="w-full text-left px-3 py-2 text-sm bg-gray-900/50 hover:bg-gray-700/50 rounded-lg text-gray-300 transition-colors" data-action="click->demo-chat#insertPrompt" data-prompt="What AI coding tools should I start with?">
              "What AI coding tools should I start with?"
            </button>
            <button class="w-full text-left px-3 py-2 text-sm bg-gray-900/50 hover:bg-gray-700/50 rounded-lg text-gray-300 transition-colors" data-action="click->demo-chat#insertPrompt" data-prompt="How do I write better prompts for code generation?">
              "How do I write better prompts?"
            </button>
            <button class="w-full text-left px-3 py-2 text-sm bg-gray-900/50 hover:bg-gray-700/50 rounded-lg text-gray-300 transition-colors" data-action="click->demo-chat#insertPrompt" data-prompt="What are common mistakes when using AI for coding?">
              "Common mistakes with AI coding?"
            </button>
          </div>
        </div>
      </div>

      <div class="lg:col-span-3">
        <div class="bg-gray-800/50 border border-gray-700 rounded-xl overflow-hidden h-[700px] flex flex-col">

          <div class="px-6 py-4 border-b border-gray-700 bg-gray-800/80">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-emerald-500/20 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold">AI Assistant</h3>
                <p class="text-sm text-gray-400">Powered by <%= ENV.fetch('LLM_PROVIDER', 'Ollama') %></p>
              </div>
              <div class="ml-auto flex items-center gap-2">
                <span class="w-2 h-2 bg-emerald-400 rounded-full animate-pulse"></span>
                <span class="text-sm text-gray-400">Online</span>
              </div>
            </div>
          </div>

          <div id="messages-container" class="flex-1 overflow-y-auto p-6 space-y-4" data-demo-chat-target="messages">
            <div class="flex gap-3">
              <div class="w-8 h-8 bg-emerald-500/20 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-4 h-4 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div class="bg-gray-700/50 rounded-xl rounded-tl-none px-4 py-3 max-w-[80%]">
                <p class="text-gray-200">
                  Welcome! I'm your AI assistant. I can help you with coding, debugging, and becoming more productive with AI tools.
                </p>
                <p class="text-gray-200 mt-2">
                  <strong>Fill out the context form on the left</strong> to personalize responses, then start chatting!
                </p>
              </div>
            </div>
          </div>

          <div class="p-4 border-t border-gray-700 bg-gray-800/80">
            <form id="chat-form" class="flex gap-3" data-turbo="false" data-action="submit->demo-chat#sendMessage">
              <input
                type="text"
                id="message-input"
                placeholder="Ask me anything..."
                class="flex-1 px-4 py-3 bg-gray-900 border border-gray-600 rounded-xl text-white placeholder-gray-500 focus:ring-2 focus:ring-emerald-500 focus:border-transparent disabled:opacity-50"
                data-demo-chat-target="input"
                disabled
              >
              <button
                type="submit"
                class="px-6 py-3 bg-emerald-500 hover:bg-emerald-400 disabled:bg-gray-600 disabled:cursor-not-allowed text-gray-900 font-semibold rounded-xl transition-colors flex items-center gap-2"
                data-demo-chat-target="sendButton"
                disabled
              >
                <span>Send</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                </svg>
              </button>
            </form>
            <div class="mt-3 flex items-center justify-center gap-4 text-xs text-gray-500">
              <span>Demo mode - conversations are not stored</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="border-t border-gray-800 mt-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4 text-sm text-gray-400">
        <div>
          Devometric Community Edition - MIT License
        </div>
        <div class="flex items-center gap-6">
          <a href="/" class="hover:text-white">Home</a>
          <a href="/test-widget.html" class="hover:text-white">Widget Test</a>
          <a href="https://github.com/Devometric/devometric-platform" target="_blank" class="hover:text-white">GitHub</a>
        </div>
      </div>
    </div>
  </div>
</div>
