<div class="relative" data-controller="dropdown">
  <button type="button"
          data-action="click->dropdown#toggle"
          class="flex items-center gap-2 px-3 py-2 text-sm text-gray-400 hover:text-white transition-colors rounded-lg hover:bg-gray-800">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
    </svg>
    <span><%= t("languages.#{I18n.locale}") %></span>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
    </svg>
  </button>

  <div data-dropdown-target="menu"
       class="hidden absolute right-0 mt-2 w-40 bg-gray-800 border border-gray-700 rounded-lg shadow-xl z-50 overflow-hidden">
    <% I18n.available_locales.each do |locale| %>
      <%= link_to t("languages.#{locale}"),
                  url_for(locale: locale == I18n.default_locale ? nil : locale),
                  class: "block px-4 py-2.5 text-sm transition-colors #{I18n.locale == locale ? 'text-emerald-400 bg-gray-700/50' : 'text-gray-300 hover:bg-gray-700 hover:text-white'}" %>
    <% end %>
  </div>
</div>
